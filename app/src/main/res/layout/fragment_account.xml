<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8EDED">
    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:src="@drawable/ic_action_avatar" />
    <TextView
        android:id="@+id/txtTenUser"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="35dp"
        android:textSize="18dp"
        android:text="TextView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tài Khoản: "
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtLoginName"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Mật khẩu: "
                android:textSize="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtPassword"
                android:layout_weight="1"
                android:inputType="textPassword"
                android:textSize="16dp"/>

            <ImageButton
                android:background="#E8EDED"
                android:id="@+id/imgshow_hidepass"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end"
                android:src="@drawable/showpass" />
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnIsChanglePassword"
            android:text="Đổi mật khẩu"
            android:textSize="16dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/linearAccount"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="15dp"
            android:background="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thay đổi mật khẩu"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/txtMatKhauCu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:hint="Mật khẩu cũ" />

        <EditText
            android:id="@+id/txtMatKhauMoi"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="48dp"
            android:hint="Mật khẩu mới" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="textPassword"
            android:id="@+id/txtXacNhanMatKhauMoi"
            android:hint="Xác nhận mật khẩu"/>
        <CheckBox
            android:id="@+id/cbShowPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiển thị mật khẩu"
            android:layout_gravity="left"/>
        <Button
            android:id="@+id/btndoiMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thay đổi mật khẩu"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>